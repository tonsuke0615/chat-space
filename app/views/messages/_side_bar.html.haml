.side-bar
  .header
    .header__box
      %p.header__box__user-name
        = current_user.name
      %ul.header__box__icons
        %li.header__box__edit
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.header__box__cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .group
    - current_user.groups.each do |group|
      %ul.group__box
        = link_to '#' do
          %li.group__box__name 
            = group.name
          %li.group__box__message
            まだメッセージはありません